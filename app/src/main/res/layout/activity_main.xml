<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 1"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 2"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/text_view_1"
        app:layout_constraintEnd_toStartOf="@id/text_view_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 3"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/text_view_1"
        app:layout_constraintBottom_toTopOf="@id/text_view_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 4"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/text_view_1"
        app:layout_constraintTop_toBottomOf="@id/text_view_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 5"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@id/text_view_1"
        app:layout_constraintTop_toBottomOf="@id/text_view_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 6"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/text_view_2"
        app:layout_constraintBottom_toTopOf="@id/text_view_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>